{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "declarationDir": "lib",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "lib": ["es5", "es6", "es2015", "es2016", "es2017", "dom"],
    "typeRoots": [],
    "types": [
      "node"
    ]
  },
  "include": [
    "src", "src/index.d.ts"
  ]
}
